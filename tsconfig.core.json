{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["src/engine/**/*.ts", "src/rules/**/*.ts", "src/utils/**/*.ts"],
  "exclude": ["src/tests/**/*.ts", "src/cli/**/*.ts"]
}
